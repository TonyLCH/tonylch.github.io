:$PORT
root * /usr/share/caddy
file_server browse

basicauth /$AUUID/* {
    $AUUID $MYUUID-HASH
}

reverse_proxy https://server.pro {
header_up Host erver.pro
}

@websocket_xray_vmess {
header Connection *Upgrade*
header Upgrade    websocket
path /$AUUID-vmess
}
reverse_proxy @websocket_xray_vmess unix//etc/caddy/vmess


